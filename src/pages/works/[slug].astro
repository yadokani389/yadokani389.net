---
import { getCollection, getEntry, render } from "astro:content";
import TagList from "../../components/TagList.svelte";
import Budoux from "../../components/Budoux.astro";
import Layout from "../../layouts/Layout.astro";
import { formatDate } from "../../utils/formatDate";

export async function getStaticPaths() {
  const works = await getCollection("works");
  return works.map((work) => ({ params: { slug: work.id } }));
}

const { slug } = Astro.params;
const work = await getEntry("works", slug);
if (!work) {
  throw new Error(`Work not found: ${slug}`);
}
const showUpdatedDate =
  work.data.lastmod !== undefined &&
  work.data.lastmod.getTime() !== work.data.date.getTime();
const { Content } = await render(work);
---

<Layout
  title={work.data.title}
  description={work.data.description}
  ogType="article"
  publishedTime={work.data.date.toISOString()}
  modifiedTime={work.data.lastmod?.toISOString()}
  tags={work.data.tags ?? []}
>
  <div class="mx-auto flex max-w-4xl flex-col gap-8">
    <a
      class="inline-flex items-center gap-2 text-sm font-semibold text-ink-600 hover:text-sage-600"
      href="/works"
    >
      ← Worksに戻る
    </a>
    <header class="space-y-3">
      <p class="text-sm font-semibold text-ink-500">作品</p>
      <h1 data-budoux class="text-3xl font-display text-ink-900 md:text-4xl">
        <Budoux text={work.data.title} />
      </h1>
      <p data-budoux class="text-lg text-ink-600">
        <Budoux text={work.data.description} />
      </p>
      <div
        class="flex flex-wrap items-center gap-x-4 gap-y-1 text-sm text-ink-500"
      >
        <div>
          公開日:
          <time class="ml-1" datetime={work.data.date.toISOString()}
            >{formatDate(work.data.date)}</time
          >
        </div>
        {
          showUpdatedDate && work.data.lastmod && (
            <div>
              最終更新:
              <time class="ml-1" datetime={work.data.lastmod.toISOString()}>
                {formatDate(work.data.lastmod)}
              </time>
            </div>
          )
        }
      </div>
    </header>

    {
      work.data.tags && (
        <div class="mt-1">
          <TagList tags={work.data.tags} basePath="/works" />
        </div>
      )
    }

    {
      work.data.external_url && (
        <div class="flex flex-wrap items-center gap-3">
          <a
            class="inline-flex items-center gap-2 rounded-full bg-sage-500 px-5 py-2 text-sm font-semibold text-primary-content transition hover:bg-sage-600"
            href={work.data.external_url}
            target="_blank"
            rel="noopener noreferrer"
          >
            Open
          </a>
        </div>
      )
    }

    <div class="prose prose-lg max-w-none">
      <Content />
    </div>
  </div>
</Layout>
