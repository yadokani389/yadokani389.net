---
import { getCollection } from "astro:content";
import TagFilterScript from "../../components/TagFilterScript.astro";
import TagList from "../../components/TagList.svelte";
import Layout from "../../layouts/Layout.astro";
import { PAGE_META } from "../../seo/pageMeta";

const works = (await getCollection("works")).sort(
  (a, b) => b.data.date.getTime() - a.data.date.getTime(),
);
---

<Layout
  title={PAGE_META.worksIndex.title}
  description={PAGE_META.worksIndex.description}
>
  <div class="mx-auto flex max-w-5xl flex-col gap-10">
    <header class="space-y-3">
      <p class="text-sm font-semibold text-ink-500">作品まとめ</p>
      <h1 class="text-3xl font-display text-ink-900 md:text-4xl">Works</h1>
    </header>

    <div
      class="flex flex-wrap items-center gap-3 rounded-full border border-sand-200 bg-white px-4 py-2 text-sm text-ink-600"
      data-filter-banner
      hidden
    >
      <div class="flex items-center gap-2">
        <span class="text-xs font-semibold text-ink-600">タグ</span>
        <strong class="font-semibold text-ink-800" data-filter-label></strong>
      </div>
      <a
        class="ml-auto inline-flex items-center rounded-full border border-sand-200 bg-white px-3 py-1 text-xs font-semibold text-ink-600 transition hover:border-sage-500/40 hover:text-sage-700"
        href="/works"
      >
        解除
      </a>
    </div>

    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
      {
        works.map((work) => (
          <article
            class="group relative flex h-full cursor-pointer flex-col gap-4 rounded-2xl border border-sand-200 bg-white p-5 transition hover:border-sage-500/40 hover:shadow-soft focus-within:ring-2 focus-within:ring-sage-500/40"
            data-card-link
            data-href={`/works/${work.id}`}
            data-tags={work.data.tags?.join(",") ?? ""}
            role="link"
            tabindex="0"
            aria-label={`${work.data.title} の詳細へ移動`}
          >
            {work.data.thumbnail && (
              <div class="overflow-hidden rounded-2xl border border-sand-200 bg-sand-50">
                <img
                  class="h-40 w-full object-cover transition duration-300 group-hover:scale-105"
                  src={work.data.thumbnail}
                  alt={`${work.data.title} のサムネイル`}
                  loading="lazy"
                />
              </div>
            )}
            <div>
              <h2 class="text-xl font-display text-ink-900">
                {work.data.title}
              </h2>
              <p class="mt-2 text-sm leading-relaxed text-ink-600">
                {work.data.description}
              </p>
            </div>
            <div class="mt-2">
              <TagList tags={work.data.tags ?? []} basePath="/works" />
            </div>
          </article>
        ))
      }
    </div>
  </div>

  <TagFilterScript />
</Layout>
